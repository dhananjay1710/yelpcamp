<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">
            Add a Campground
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class='mb-3'>
                    <label class='form-label' for="title">Title</label>
                    <input class='form-control' type='text'id='title' name='campground[title]' required>
                </div>
                <div class='mb-3'>
                    <label class='form-label' for="location">Location</label>
                    <input type='text'id='location' class='form-control' name='campground[location]' required>
                </div>
                <div class="mb-3">
                    <label class='form-label' for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" name="campground[price]" class="form-control" id='price' aria-label="price" required>
                      </div>
                </div>
                <!--
                <div class='mb-3'> 
                    <label class='form-label' for="image">Image Link</label>
                    <input type='text'id='image' class='form-control' name='campground[image]' required>
                    <input type="file" name="image" class="form-control" id='image' multiple> 
                </div>
                -->
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class='mb-3'>
                    <label class='form-label' for="description">Description</label>
                    <textarea type='text'id='description' class='form-control' name='campground[description]' required></textarea>
                </div>
                <div class='mb-3'>
                    <button class='btn btn-success' type="submit">Add Campground</button>
                </div>
            </form>
        </div>
    </div>
    
